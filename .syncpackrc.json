{
    "$schema": "./node_modules/syncpack/dist/schema.json",
  

  "source": [
    "package.json",
    "packages/*/package.json",
    "apps/*/package.json"
  ],

  "semverGroups": [
    {
      "dependencyTypes": [
        "prod",
        "resolutions",
        "overrides",
        "pnpmOverrides",
        "local"
      ],
      "range": ""
    },
    {
      "dependencyTypes": ["dev"],
      "range": "~"
    },
    {
      "dependencyTypes": ["peer"],
      "range": "^"
    }
  ],
  "versionGroups": [
    {
        "label": "Use workspace protocol when developing local packages",
        "dependencies": [
          "@tasks-app/eslint-config",
          "@tasks-app/api",
          "@workspace/ui",
            "@tasks-app/api-client"
        ],
        "dependencyTypes": ["dev", "prod"],
        "pinVersion": "workspace:*"
      },
    {
        "packages": ["**"],

        "dependencies": ["prod", "dev", "peer"],
        "dependencyTypes": ["**"],

        "policy": "sameRange"
      }
    
  ]
}