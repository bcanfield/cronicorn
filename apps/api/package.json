{
  "name": "@tasks-app/api",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "exports": {
    "./routes": "./src/routes/index.ts",
    "./schema": "./src/db/schema.ts",
    "./db/query-schemas": {
      "types": "./dist/src/db/query-schemas.d.ts",
      "import": "./dist/src/db/query-schemas.js",
      "require": "./dist/src/db/query-schemas.js"
    }
  },
  "types": "dist/src/index.d.ts",
  "typesVersions": {
    "*": {
      "db/*": [
        "dist/src/db/*.d.ts"
      ]
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "clean": "rm -rf node_modules dist",
    "typecheck": "tsc --noEmit",
    "build": "tsc && tsc-alias",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "test": "cross-env NODE_ENV=test vitest --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:reset": "tsx --env-file=.env src/db/reset.ts",
    "db:seed": "tsx --env-file=.env src/db/seed.ts"
  },
  "dependencies": {
    "@auth/core": "0.40.0",
    "@auth/drizzle-adapter": "1.7.4",
    "@hono/auth-js": "1.1.0",
    "@hono/node-server": "1.13.7",
    "@hono/zod-openapi": "0.18.3",
    "@libsql/client": "0.14.0",
    "@logtape/logtape": "0.8.0",
    "@scalar/hono-api-reference": "0.5.164",
    "@tasks-app/eslint-config": "workspace:*",
    "dotenv": "17.2.0",
    "dotenv-expand": "12.0.2",
    "drizzle-orm": "0.38.3",
    "drizzle-seed": "0.3.1",
    "drizzle-zod": "0.6.1",
    "hono": "4.8.5",
    "hono-pino": "0.7.0",
    "nodemailer": "6.9.16",
    "pg": "8.16.3",
    "pino": "9.6.0",
    "pino-pretty": "13.0.0",
    "stoker": "1.4.2",
    "worker-mailer": "1.0.1",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@types/node": "~22.10.2",
    "@vitest/coverage-v8": "2.1.9",
    "cross-env": "~7.0.3",
    "drizzle-kit": "~0.30.1",
    "eslint": "~9.31.0",
    "eslint-plugin-drizzle": "~0.2.3",
    "eslint-plugin-format": "~0.1.3",
    "tsc-alias": "~1.8.10",
    "tsx": "~4.19.2",
    "turso": "~0.1.0",
    "typescript": "~5.8.3",
    "vitest": "~2.1.8"
  }
}
