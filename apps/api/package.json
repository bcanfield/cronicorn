{
  "name": "@cronicorn/api",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./client": {
      "types": "./src/client.ts",
      "import": "./src/client.ts"
    },
    "./client-auth": {
      "types": "./src/client-auth.ts",
      "import": "./src/client-auth.ts"
    }
  },
  "files": [
    "src"
  ],
  "scripts": {
    "dev": "bun --hot run ./src/run.ts",
    "build": "bun build ./src/run.ts --target node --outdir ./dist",
    "start": "bun run dist/run.js",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist && rm -rf node_modules"
  },
  "dependencies": {
    "@auth/core": "^0.40.0",
    "@cronicorn/database": "workspace:*",
    "@hono/auth-js": "^1.0.17",
    "@hono/node-server": "^1.15.0",
    "@hono/zod-validator": "^0.7.0",
    "@scalar/hono-api-reference": "^0.9.10",
    "@scalar/openapi-to-markdown": "^0.2.20",
    "hono": "^4.8.4",
    "hono-openapi": "^0.4.8",
    "zod": "^4.0.5",
    "zod-openapi": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
