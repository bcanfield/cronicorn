{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext", // Changed from "NodeNext"
    "moduleResolution": "bundler", // Changed from "NodeNext"
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
